# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# TypeScript/JavaScript files
[*.{ts,js,tsx,jsx}]
indent_style = space
indent_size = 4

# Svelte files
[*.svelte]
indent_style = space
indent_size = 4

# JSON files
[*.json]
indent_style = space
indent_size = 4

# CSS/SCSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 4

# HTML files
[*.html]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 4

# Package files
[package.json]
indent_style = space
indent_size = 4

# Configuration files
[*.config.{js,ts}]
indent_style = space
indent_size = 4
